<!--- places detail page--->

<h1><strong><%= @place["name"] %><strong></h1>

<ul>
  <% for entry in @entries%>
    <li>
      <a href="/entries/<%= entry["id"]%>">
      <%= entry["title"] %>
      <%= entry["posted_on"] %>
      <%= entry["description"] %>
      </a>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>